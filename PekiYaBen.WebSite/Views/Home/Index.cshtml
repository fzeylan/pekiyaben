<section class="browse-categories section bg-gray ptb_50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-6">
                <div class="section-heading text-center">
                    <h2>Koçluk Tipleri</h2>
                </div>
            </div>
        </div>
        <div class="row slider responsive">
            @foreach (var product in products.Where(x => !x.Title.Contains("Atölye") && !x.Title.Contains("Sertifika Programı")))
            {
                var productTitle = product.Title;

                var url = $"/kocluk/{product.Id}/{product.Title.FriendlyUrl()}";

                <div class="m-2">
                    <a href="@url" class="img-box">
                        <div class="img-box-content">
                            <h4>@product.Title</h4>
                        </div>
                        <div class="img-box-background">
                            @if (product.ContentImage != null)
                            {
                                <img class="img-fluid" src="@Url.Action("Thumbnail", "Home", new {path=product.ContentImage, width = 269, height = 269})" alt="@product.Title">
                            }
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<section class="browse-categories section ptb_50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-6">
                <div class="section-heading text-center">
                    <h2>Atölyeler</h2>
                </div>
            </div>
        </div>
        <div class="row slider responsive">
            @foreach (var product in products.Where(x => x.Title.StartsWith("Atölye") || x.Title.StartsWith("Genel Atölye")))
            {
                var productTitle = product.Title;
                if (productTitle.StartsWith("Atölye"))
                {
                    productTitle = productTitle.Replace("Atölye - ", "").Trim();
                }
                else
                {
                    productTitle = productTitle.Replace("Genel Atölye - ", "").Trim();
                }

                var url = $"/atolye/{product.Id}/{product.Title.FriendlyUrl()}";

                <div class="m-2">
                    <a href="@url" class="img-box">
                        <div class="img-box-content">
                            <h4>@productTitle</h4>
                        </div>
                        <div class="img-box-background">
                            @if (product.ContentImage != null)
                            {
                                <img class="img-fluid" src="@Url.Action("Thumbnail", "Home", new {path=product.ContentImage, width = 269, height = 269})" alt="@product.Title">
                            }
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
