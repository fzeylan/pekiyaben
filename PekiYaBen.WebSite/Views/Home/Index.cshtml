<section class="section pt-4 bg-gray">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-6">
                <div class="section-heading text-center">
                    <h2>Koçluk Ekibimiz</h2>
                    <p class="d-none d-sm-block mt-4">Türkiye'nin lider koçluk ekibi ile tanışın</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @foreach (var coach in Model)
                {
                    var prods = coach.CoachingInfo.Split(',');
                    var selectedProduct = products.FirstOrDefault(x => x.Title == prods.First());
                    if (selectedProduct != null)
                    {
                        var url = $"/Kocluk-Ekibimiz/{selectedProduct.Id}/{selectedProduct.Title.FriendlyUrl()}/{coach.Id}/{coach.FullName.FriendlyUrl()}";
                        <div class="coaches bg-white">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    <div class="job-company-logo">
                                        <a href="@url"><img src="@coach.ProfilePhoto" alt="@coach.FullName" title="@coach.FullName" /></a>
                                    </div>
                                    <div class="job-details">
                                        <h3>@coach.FullName</h3>
                                        <span class="title mb-5">
                                            @coach.Title
                                        </span><br />
                                        <a href="@url" class=" text-primary">
                                            <i class="fa fa-search"></i> Öz Geçmişi
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-8 col-md-6 col-xs-12">
                                    @coach.Description
                                    <div class="text-right">
                                        <a href="@url" class="btn btn-outline-primary btn-sm">
                                            <i class="fa fa-calendar-alt"></i> @(coach.Status == 1 ? "Randevu Al" : "Detaylı Bilgi")
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
<section class="section service-area overflow-hidden ptb_50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-6">
                <div class="section-heading text-center">
                    <h2>Kişisel Gelişim</h2>
                    <p class="d-none d-sm-block mt-4">
                        <a href="@Url.Action("Blog", "Home")" class="btn btn-outline-primary btn-sm">Yazılar</a> <a href="@Url.Action("Video", "Home")" class="btn btn-outline-primary btn-sm">Videolar</a> <a href="@Url.Action("Podcast", "Home")" class="btn btn-outline-primary btn-sm">Podcastler</a>
                    </p>
                </div>
            </div>
        </div>

        @{
            var typeName = selectedCategory.Type == 0 ? "Yazılar" : (selectedCategory.Type == 1 ? "Videolar" : "Podcastler");
            var contentUrl = $"/Kisisel-Gelisim/{typeName.FriendlyUrl()}/{selectedCategory.Id}/{selectedCategory.Title.FriendlyUrl()}/{lastContent.Id}/{lastContent.Title.FriendlyUrl()}";
        }

        <div class="row justify-content-between">
            <div class="col-12 col-lg-4 d-none d-lg-block">
                <div class="blog-thumb">
                    <a href="@contentUrl">
                        <img src="@lastContent.Image" />
                        @if (lastContent.Type > 0)
                        {
                            <div class="ovl">
                                <i class="fa @(lastContent.Type == 1 ? "fa-play" : "fa-volume-up") fa-10x"></i>
                            </div>
                        }
                    </a>
                </div>
            </div>
            @{ var categoryUrl = $"/Kisisel-Gelisim/{typeName.FriendlyUrl()}/{selectedCategory.Id}/{selectedCategory.Title.FriendlyUrl()}"; }
            <div class="col-12 col-lg-8">
                <div class="blog-content h-100">
                    <h3 class="blog-title"><a href="@contentUrl">@lastContent.Title</a></h3>
                    <ul class="meta-info d-flex mb-3">
                        <li class="mr-3">@lastContentCoach.FullName</li>
                        <li class="mr-3"><a href="@categoryUrl">@selectedCategory.Title</a></li>
                        <li class="mr-3">@lastContent.CreateDate.ToDayMonthYear()</li>
                    </ul>
                    <p>
                        @Html.Raw(lastContent.Summary)
                    </p>
                    <a href="@contentUrl" class="btn btn-outline-primary btn-sm mt-3">Devamı</a>
                </div>
            </div>

        </div>
    </div>
</section>

